{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "outDir": "build",
    "esModuleInterop": true,
    "lib": [
      "ES2017",
      "DOM",
      "ES2021.String",
      "es2020"
    ],
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "inlineSourceMap": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "main.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}